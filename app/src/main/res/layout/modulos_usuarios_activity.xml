<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#1a1a1a"
              android:gravity="center"
              android:padding="24dp"
              tools:context=".Modulos_usuariosActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Usuarios"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opción:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="40dp"/>

    <!-- Botón Usuarios -->
    <androidx.cardview.widget.CardView
            android:layout_width="349dp"
            android:layout_height="194dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardUsuarios"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:strokeColor="#4DFFFFFF"
            app:cardBackgroundColor="#33FFFFFF">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_usuarios"
                    android:tint="#FFFFFF"
                    android:layout_marginBottom="12dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Usuarios"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Control de roles y usuarios."
                    android:textColor="#E0E0E0"
                    android:textSize="14sp"
                    android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón Proveedores -->
    <androidx.cardview.widget.CardView
            android:layout_width="366dp"
            android:layout_height="198dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardProveedores"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:strokeColor="#4DFFFFFF"
            app:cardBackgroundColor="#33FFFFFF">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_proveedores"
                    android:tint="#FFFFFF"
                    android:layout_marginBottom="12dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Proveedores"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrar proveedores del sistema"
                    android:textColor="#E0E0E0"
                    android:textSize="14sp"
                    android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>