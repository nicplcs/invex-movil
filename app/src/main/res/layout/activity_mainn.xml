<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a1a1a"
        tools:context=".MainActivityy"
        android:fitsSystemWindows="true">

    <!-- Header con logo -->

    <!--Contenedor-->
    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0">

        <ImageView
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:src="@drawable/logo"
                android:text="INVEX"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toTopOf="@id/footerText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

            <TextView
                    android:id="@+id/welcomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenido!"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

            <TextView
                    android:id="@+id/selectModuleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona uno de los módulos:"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="32dp" />

            <!--Movimientos-->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMovimientos"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#4DFFFFFF"
                    app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                    <ImageView
                            android:layout_width="79dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_movimientos"
                            android:contentDescription="Icono Movimientos"
                            android:scaleType="centerInside"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gestión de Movimientos"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entrada y salida de productos."
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--Productos-->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProductos"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#4DFFFFFF"
                    app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_inventory"
                            android:contentDescription="Icono Productos"
                            android:scaleType="centerInside"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gestión de Productos"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registra y organiza el inventario."
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--Usuarios-->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardUsuarios"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#4DFFFFFF"
                    app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/baseline_person_outline_24"
                            android:contentDescription="Icono Usuarios"
                            android:scaleType="centerInside"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gestión de Usuarios"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Control de roles y usuarios."
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cerrar Sesión"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="32dp"
                    app:cornerRadius="12dp"/>


        </LinearLayout>
    </ScrollView>

    <!--Footer-->
    <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Punto Éxito. Todos los derechos reservados."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>

