<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/cardView"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardCornerRadius="20dp"
                                   app:cardBackgroundColor="#1AFFFFFF"
                                   app:cardElevation="12dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_glass_background">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

            <TextView
                    android:id="@+id/tvId_movimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 001"
                    android:textColor="#CCFFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#1AFFFFFF"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/tvTipoMovimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGRESO"
                    android:textColor="#90EE90"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="#4D28A745"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="6dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tvResponsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Pérez"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:layout_marginBottom="16dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginBottom="12dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvDescripcionMovimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descripción del movimiento"
                    android:textColor="#F2FFFFFF"
                    android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvFechaMovimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-31"
                    android:textColor="#F2FFFFFF"
                    android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvAccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F2FFFFFF"
                    android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#0DFFFFFF"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Producto"
                        android:textColor="#99FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                <TextView
                        android:id="@+id/tvId_producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRD-001"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#0DFFFFFF"
                    android:padding="12dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:textColor="#99FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                <TextView
                        android:id="@+id/tvCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Movimiento"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/button_delete_gradient"
                android:paddingVertical="14dp"
                android:elevation="4dp"
                android:layout_marginTop="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>